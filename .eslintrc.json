{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["warn", "always"],
        "quotes": [2, "single", { "avoidEscape": true }],
        "no-console": "warn"
    },
    "globals": {
        "wwLib": "readonly"
    }
}